{
  "name": "quantajs",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @quantajs/core dev",
    "build": "pnpm --filter @quantajs/core build",
    "preview": "pnpm --filter @quantajs/core preview",
    "clean": "pnpm --filter @quantajs/core clean",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.0.3",
    "vite-plugin-eslint": "^1.8.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
